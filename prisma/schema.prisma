generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  LEAD
  USER
}

enum TodoStatus {
  STATUS
  INCOMPLETE
  COMPLETE
}

model User {
  id       String @id @default(cuid())

  username String @unique
  email    String @unique
  password String
  role     Role   @default(USER)

  // Self relation: LEAD -> members, USER -> teamLead
  teamLeadId String?
  teamLead   User?   @relation("LeadMembers", fields: [teamLeadId], references: [id])
  members    User[]  @relation("LeadMembers")

  // Activation
  isActive      Boolean   @default(true)
  deactivatedAt DateTime?

  // Attendance
  attendances Attendance[]

  // NEW: Todos
  todos Todo[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([role])
  @@index([teamLeadId])
  @@index([isActive])
}

model Attendance {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  day         DateTime // store normalized day (00:00:00)
  checkInAt   DateTime
  checkOutAt  DateTime?
  workMinutes Int      @default(0)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, day], name: "userId_day")
  @@index([userId, day])
  @@index([day])
}

model Todo {
  id        String     @id @default(cuid())
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  day       DateTime   // normalized day (00:00:00)
  title     String
  note      String?
  status    TodoStatus @default(STATUS)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId, day])
  @@index([day])
}
